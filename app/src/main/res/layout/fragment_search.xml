<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fgSearchMainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnOpenSearchActivity"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/purple_200"
            android:text="Search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/frameLayoutRecentSearchs"

            tools:layout_height="wrap_content"
            />
<FrameLayout
    android:id="@+id/frameLayoutRecentSearchs"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#88B56F"
    android:orientation="horizontal"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_constraintBottom_toTopOf="@+id/fragmentSearchRecyclerViewMain"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btnOpenSearchActivity"
    app:layout_constraintVertical_weight="2"
    tools:layout_height="100dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearchHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88B56F"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:layout_height="100dp" />
</FrameLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragmentSearchRecyclerViewMain"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:background="@color/teal_200"
            android:backgroundTint="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frameLayoutRecentSearchs"
            app:layout_constraintVertical_weight="8"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>